<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Collect form data
    $username = $_POST['username'];
    $email = $_POST['email'];
    $password = $_POST['password'];

    // Define regex pattern for password validation
    $passwordPattern = "/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d]{6,12}$/";

    // Check if password meets the complexity requirements
    if (preg_match($passwordPattern, $password)) {
        echo "Signup Successful!<br>";
        echo "Username: " . htmlspecialchars($username) . "<br>";
        echo "Email: " . htmlspecialchars($email) . "<br>";
        // Further processing, such as saving to a database, can be done here
    } else {
        echo "Password must contain at least one uppercase letter, one lowercase letter, one number, and be between 6 to 12 characters long.";
    }
}
?>
